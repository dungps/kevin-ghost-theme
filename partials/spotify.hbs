{{#if @custom.spotify}}
    <button class="fixed bottom-4 right-4 z-50" type="button" id="show_spotify_modal" data-target="spotify-modal">
        <i class="fa-brands fa-spotify fa-2xl" style="color: #1bd760"></i>
    </button>
    <div class="fixed bottom-12 right-4 hidden" id="spotify-modal">
        <iframe
            style="border-radius: 12px"
            src="{{@custom.spotify}}"
            width="100%"
            height="300"
            frameBorder="0"
            allowfullscreen=""
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        ></iframe>
    </div>
{{/if}}