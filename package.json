{
    "name": "kevin",
    "version": "1.1.2",
    "description": "",
    "main": "index.js",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "build": "gulp build"
    },
    "keywords": [
        "ghost-theme"
    ],
    "author": {
        "name": "Kevin Pham",
        "email": "hi@dungps.com",
        "url": "https://www.dungps.com/"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Blog"
        ]
    },
    "license": "ISC",
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.1.1",
        "@tailwindcss/typography": "^0.5.2",
        "autoprefixer": "^10.4.7",
        "beeper": "^2.1.0",
        "cssnano": "^5.1.12",
        "gulp": "^4.0.2",
        "gulp-concat": "^2.6.1",
        "gulp-livereload": "^4.0.2",
        "gulp-postcss": "^9.0.1",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-uglify": "^3.0.2",
        "gulp-zip": "^5.1.0",
        "postcss": "^8.4.14",
        "postcss-easy-import": "^4.0.0",
        "pump": "^3.0.0",
        "tailwindcss": "^3.1.4"
    },
    "renovate": {
        "extends": [
            "@tryghost:theme"
        ]
    },
    "config": {
        "posts_per_page": 25,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "use_custom_cover": {
                "type": "boolean",
                "default": false,
                "group": "homepage"
            },
            "avatar_image": {
                "type": "image",
                "group": "homepage"
            },
            "show_comment": {
                "type": "boolean",
                "default": false,
                "group": "post"
            },
            "show_share": {
                "type": "boolean",
                "default": false,
                "group": "post"
            },
            "spotify": {
                "type": "text"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "roboto",
                    "alata"
                ],
                "default": "alata"
            }
        }
    }
}
